---
import SocialLinks from './SocialLinks.astro'
const today = new Date()
---

<footer class="bg-secondary py-20 border-t-2 border-primary/20 mt-20 relative overflow-hidden">
  <!-- Artsy Background Pattern (Abstract Fluid Forms) -->
  <div class="absolute inset-0 pointer-events-none">
    <svg width="100%" height="100%" viewBox="0 0 1200 400" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
      <!-- Deep Flow Layer -->
      <path d="M0,400 L0,150 C200,300 400,0 600,150 C800,300 1000,100 1200,250 V400 H0 Z" fill="hsl(var(--footer-landscape-1))" stroke="none" />
      
      <!-- Mid Flow Layer -->
      <path d="M0,400 L0,300 C300,100 500,450 800,250 C1000,100 1100,350 1200,300 V400 H0 Z" fill="hsl(var(--footer-landscape-2))" stroke="none" />
      
      <!-- Foreground Abstract Blob -->
      <path d="M0,400 L0,350 C200,450 400,250 600,350 C900,500 1000,200 1200,380 V400 H0 Z" fill="hsl(var(--footer-landscape-3))" stroke="none" />
      
      <!-- Floating Elements -->
      <circle cx="80%" cy="30%" r="150" fill="hsl(var(--footer-sun))" fill-opacity="0.03" filter="blur(40px)" />
      <circle cx="20%" cy="60%" r="100" fill="hsl(var(--footer-landscape-1))" fill-opacity="0.03" filter="blur(30px)" />
    </svg>
  </div>

  <div class="container relative z-10">
    <div class="mb-20">
      <a href="mailto:briankimball1982@gmail.com" class="text-6xl md:text-9xl font-serif font-black text-foreground hover:text-primary transition-colors duration-300 tracking-tighter leading-none">
        Connect
      </a>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 font-mono text-xs tracking-widest text-foreground/60">
      <div class="flex flex-col gap-4">
        <span class="text-primary mb-2">Navigation</span>
        <a href="/" class="hover:text-primary transition-colors">Home</a>
        <a href="/blog" class="hover:text-primary transition-colors">Blog</a>
        <a href="/about" class="hover:text-primary transition-colors">About</a>
        <a href="/tags" class="hover:text-primary transition-colors">Tags</a>
      </div>
      <div class="flex flex-col gap-4">
        <span class="text-primary mb-2">Social</span>
        <div class="flex flex-col gap-4">
          <a href="https://github.com/bskimball" target="_blank" class="hover:text-primary transition-colors">GitHub</a>
          <a href="https://www.linkedin.com/in/brian-kimball-0499678a/" target="_blank" class="hover:text-primary transition-colors">LinkedIn</a>
          <a href="https://bsky.app/profile/briankimball.bsky.social" target="_blank" class="hover:text-primary transition-colors">Bluesky</a>
          <a href="https://twitter.com/_BrianKimball" target="_blank" class="hover:text-primary transition-colors">Twitter</a>
        </div>
      </div>
      <div class="flex flex-col gap-4">
        <span class="text-primary mb-2">Legal</span>
        <span>&copy; {today.getFullYear()} Brian Kimball</span>
        <span>All rights reserved</span>

      </div>
    </div>
  </div>
</footer>
