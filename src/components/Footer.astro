---
const today = new Date()
---

<footer
  class="bg-secondary py-20 border-t-2 border-primary/20 mt-20 relative overflow-hidden"
>
  <!-- Artsy Background Pattern (The Drafting Table / Architectural Schematics) -->
  <div class="absolute inset-0 pointer-events-none select-none">
    <svg
      class="absolute inset-0 w-full h-full"
      viewBox="0 0 1200 400"
      preserveAspectRatio="xMidYMid slice"
      xmlns="http://www.w3.org/2000/svg"
    >
      <!-- Definitions for reusable patterns -->
      <defs>
        <pattern
          id="grid-pattern"
          width="40"
          height="40"
          patternUnits="userSpaceOnUse"
        >
          <path
            d="M 40 0 L 0 0 0 40"
            fill="none"
            class="stroke-foreground/5 dark:stroke-primary/5"
            stroke-width="1"></path>
        </pattern>
      </defs>

      <!-- Layer 1: Background Grid (The Foundation) -->
      <rect width="100%" height="100%" fill="url(#grid-pattern)"></rect>

      <!-- Layer 2: Technical Geometry (The Structure) -->
      <g fill="none" stroke-width="1">
        <!-- Large Compass Arc (Bottom Left) -->
        <circle
          cx="0"
          cy="400"
          r="300"
          class="stroke-foreground/10 dark:stroke-primary/10"
          stroke-dasharray="4 4"></circle>
        <circle
          cx="0"
          cy="400"
          r="320"
          class="stroke-foreground/5 dark:stroke-primary/5"></circle>

        <!-- Large Compass Arc (Top Right) -->
        <circle
          cx="1200"
          cy="0"
          r="450"
          class="stroke-foreground/10 dark:stroke-primary/10"></circle>
        <circle
          cx="1200"
          cy="0"
          r="200"
          class="stroke-foreground/5 dark:stroke-primary/5"
          stroke-dasharray="8 8"></circle>

        <!-- Connecting Tangents -->
        <line
          x1="100"
          y1="0"
          x2="400"
          y2="400"
          class="stroke-foreground/10 dark:stroke-primary/10"></line>
        <line
          x1="0"
          y1="350"
          x2="1200"
          y2="50"
          class="stroke-foreground/10 dark:stroke-primary/10"></line>
      </g>

      <!-- Layer 3: Engineering Annotations (The Detail) -->
      <g
        class="fill-foreground/20 dark:fill-primary/20 font-mono text-[10px] tracking-widest uppercase"
      >
        <!-- Crosshairs -->
        <g transform="translate(600, 200)">
          <line
            x1="-10"
            y1="0"
            x2="10"
            y2="0"
            class="stroke-foreground/20 dark:stroke-primary/20"></line>
          <line
            x1="0"
            y1="-10"
            x2="0"
            y2="10"
            class="stroke-foreground/20 dark:stroke-primary/20"></line>
          <circle
            r="20"
            fill="none"
            class="stroke-foreground/10 dark:stroke-primary/10"
            stroke-dasharray="2 2"></circle>
          <text x="25" y="4" class="opacity-50">REF-01</text>
        </g>

        <!-- Data points -->
        <text x="20" y="380">FIG 1.0 // SCHEMATIC</text>
        <text x="1100" y="380" text-anchor="end">SCALE 1:1</text>

        <g transform="translate(100, 100)">
          <circle r="2" fill="currentColor"></circle>
          <text x="10" y="4" class="opacity-50">P-A</text>
        </g>

        <g transform="translate(1100, 300)">
          <circle r="2" fill="currentColor"></circle>
          <text x="-30" y="4" class="opacity-50">P-B</text>
        </g>
      </g>
    </svg>
  </div>

  <div class="container relative z-10">
    <div class="mb-20">
      <a
        href="mailto:briankimball1982@gmail.com"
        class="text-6xl md:text-9xl font-serif font-black text-foreground hover:text-primary transition-colors duration-300 tracking-tighter leading-none"
      >
        Connect
      </a>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-3 gap-12 font-mono text-xs tracking-widest text-foreground/60"
    >
      <div class="flex flex-col gap-4">
        <span class="text-primary mb-2">Navigation</span>
        <a href="/" class="hover:text-primary transition-colors">Home</a>
        <a href="/blog" class="hover:text-primary transition-colors">Blog</a>
        <a href="/about" class="hover:text-primary transition-colors">About</a>
        <a href="/tags" class="hover:text-primary transition-colors">Tags</a>
      </div>
      <div class="flex flex-col gap-4">
        <span class="text-primary mb-2">Social</span>
        <div class="flex flex-col gap-4">
          <a
            href="https://github.com/bskimball"
            target="_blank"
            class="hover:text-primary transition-colors">GitHub</a
          >
          <a
            href="https://www.linkedin.com/in/brian-kimball-0499678a/"
            target="_blank"
            class="hover:text-primary transition-colors">LinkedIn</a
          >
          <a
            href="https://bsky.app/profile/briankimball.bsky.social"
            target="_blank"
            class="hover:text-primary transition-colors">Bluesky</a
          >
          <a
            href="https://twitter.com/_BrianKimball"
            target="_blank"
            class="hover:text-primary transition-colors">Twitter</a
          >
        </div>
      </div>
      <div class="flex flex-col gap-4">
        <span class="text-primary mb-2">Legal</span>
        <span>&copy; {today.getFullYear()} Brian Kimball</span>
        <span>All rights reserved</span>
      </div>
    </div>
  </div>
</footer>
