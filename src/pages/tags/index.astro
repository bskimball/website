---
import BaseHead from '@/components/BaseHead.astro'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import { getCollection } from 'astro:content'
import Backdrop from '@/components/Backdrop.astro'
import Aurora from '../../components/Aurora.astro'

const tags = await getCollection('tags')
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Tags" description="Tags available in Blog" />
  </head>
  <body class="bg-background text-foreground antialiased">
    <Backdrop />
    <Header />
    <main class="container">
      <Aurora>
        <h1
          class="leading-tight text-8xl font-bold animate-in fade-in slide-in-from-bottom-2 fill-mode-both duration-1000"
        >
          Tags
        </h1>
      </Aurora>
      <section class="flex flex-wrap gap-3">
        {
          tags.map((tag, index) => (
            <a
              href={`/${tag.collection}/${tag.id}`}
              class="animate-in fade-in slide-in-from-bottom-2 fill-mode-both duration-500 hover:text-emerald-500 focus:text-emerald-500"
              style={{ animationDelay: `${index * 7 ** 2 + 200}ms` }}
            >
              {tag.data.name}
            </a>
          ))
        }
      </section>
    </main>
    <Footer />
  </body>
</html>
