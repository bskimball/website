---
import BaseHead from '@/components/BaseHead.astro'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import { getCollection } from 'astro:content'

const tags = await getCollection('tags')
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Tags" description="Tags available in Blog" />
  </head>
  <body
    class="bg-background text-foreground antialiased selection:bg-primary selection:text-background"
  >
    <div class="noise-overlay"></div>
    <Header />
    <main class="container py-20">
      <div class="flex flex-col gap-12 relative">
        <div
          class="absolute -top-8 left-0 font-mono text-xs tracking-widest text-foreground/40 select-none"
        >
          FIG 4.0 // INDEX
        </div>
        <h1
          class="leading-tight text-8xl font-serif animate-in fade-in slide-in-from-bottom-2 fill-mode-both duration-1000"
        >
          Index / Tags
        </h1>
        <section class="flex flex-wrap gap-4">
          {
            tags.map((tag, index) => (
              <a
                href={`/${tag.collection}/${tag.id}`}
                class="animate-in fade-in slide-in-from-bottom-2 fill-mode-both duration-500 border border-foreground/20 px-4 py-2 hover:bg-primary hover:text-background hover:border-background transition-colors font-mono text-lg rounded-full"
                style={{ animationDelay: `${index * 50}ms` }}
              >
                {tag.data.name}
              </a>
            ))
          }
        </section>
      </div>
    </main>
    <Footer />
  </body>
</html>
